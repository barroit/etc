Host *
	AddKeysToAgent yes
	IdentitiesOnly yes

Host lvm.windows
	HostName windows.lvm
	IdentityFile ~/.ssh/id_lvm_windows

Host lvm.noble
	HostName noble.lvm
	IdentityFile ~/.ssh/id_lvm_noble

Host lvm.freebsd
	HostName freebsd.lvm
	IdentityFile ~/.ssh/id_lvm_freebsd

Host dev.macos
	HostName macos.dev
	IdentityFile ~/.ssh/id_dev_macos

Host dev.ubuntu
	HostName ubuntu.dev
	IdentityFile ~/.ssh/id_dev_ubuntu

Host oci.headnode
	HostName headnode.oci
	User ubuntu
	IdentityFile ~/.ssh/id_oci_headnode

Host node.raider
	HostName raider.node
	IdentityFile ~/.ssh/id_dev_macos

Host node.lancer
	HostName lancer.node
	IdentityFile ~/.ssh/id_dev_ubuntu

Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/id_github

	HostName noble.lvm
	IdentityFile %d/.ssh/lvm_noble.pub

Host lvm.freebsd
	HostName freebsd.lvm
	IdentityFile %d/.ssh/lvm_freebsd.pub

Host dev.macos
	HostName macos.dev
	IdentityFile %d/.ssh/dev_macos.pub

Host dev.ubuntu
	HostName ubuntu.dev
	IdentityFile %d/.ssh/dev_ubuntu.pub

Host node.raider
	HostName raider.node
	IdentityFile %d/.ssh/node_raider.pub

